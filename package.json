    "url": "https://github.com/joaovitorpessoa"
  },
  "version": "1.0.0",
  "engines": {
    "node": "16.14.2"
  },
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "start:dev": "npm run watch-ts",
    "start:dev-database": "docker-compose -f docker/dev/dev.docker-compose.yml up -d",
    "start:prod": "node .",
    "build": "npm run build:ts",
    "prebuild": "npm install",
    "build:ts": "tsc && npm run resolve-path-mapping",
    "resolve-path-mapping": "tsc-alias --directory dist",
    "watch-ts": "tsc-watch --watch --onSuccess \"npm run tsc-watch-on-success\"",
    "tsc-watch-on-success": "npm run resolve-path-mapping && npm run start:prod",
    "watch-test": "jest --watch",
    "migrate": "typeorm migration:run --dataSource dist/infra/orm/typeorm/cli/database-connection.js",
    "premigrate": "npm run build",
    "test": "jest",
    "prepare": "husky install",
    "format": "prettier --write .",
    "lint": "eslint src/**/*.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.2",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^26.6.3",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.10",
    "ts-jest": "^26.5.4",
    "tsyringe": "^4.7.0",
    "typeorm": "^0.3.7",
    "uuid": "^8.3.2"
  }
}

{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@features/*": ["features/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"],
      "@/*": ["*"]
    }
  },
  "exclude": ["jest.config.ts", "**/*.spec.ts"]
}
